#login-form.page-header
  %h1 Login to access the dashboard
  = form_for User.new, :url => admin_new_session_path do |f|
    %fieldset
      .clearfix
        = f.label :email
        .input= f.text_field :email, :class => "xlarge"
      .clearfix
        = f.label :password
        .input= f.password_field :password
      .actions
        = f.submit "Login", :class => "btn primary"
        .btn= link_to "Reset password", "#"